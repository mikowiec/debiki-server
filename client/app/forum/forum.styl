  margin-bottom: 7px; // place here (but not on .esF_BB) in case btns line wrap

.esF_BB_PageTitle
  display: inline-block;
  float: left;
  font-size: 17px;
  padding: 7px 5px 0;
  font-weight: bold;
  margin-right: 5px;

.esForum_catsNav
  margin-top: 20px;
  .btn
    background: hsl(0, 0%, 92%);
    padding: 7px 10px !important;
    &:hover
      background: hsl(0, 0%, 81%);

.esForum_catsNav_btn.btn
  float: left;

.esF_BB_SortBtn
  margin-left: $forumNavBtnGroupLeft !important;
  border: none !important;

.esForum_catsNav_sort
