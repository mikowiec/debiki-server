.esF_BB_CreateBtn
  padding-top: 7px;
  padding-bottom: 7px;

.esF_BB_EditCat
  padding-top: 7px;

.esForum_topicsCatsHelp
  max-width: 500px !important;

.DW.DW.DW .esForum_filterBtn
  float: left;
  border: none;
  margin-left: $forumNavBtnGroupLeft;
  margin-right: $forumNavBtnGroupLeft;
  &:first-child
    margin-left: 0;

.dw-forum-actionbar
