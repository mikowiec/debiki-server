$forumNavBtnGroupLeft = 8px;
$isWideMinWidth = 900px;

// Avoid a flash of the-wrong-layout (e.g. table layout, before noticing that the screen
// is narrow and switching to list layout).
html.js:not(.dw-react-started)
  .dw-topic-list,
  .esF_TsL
    display: none;

.esForumIntro
  clearfix()
  margin: 0.4em 0;
  max-width: 125ex;
  background: hsl($uiHue, 89%, 95%);
  padding: 0.8em 1.15em 0.35em;
  p
    margin-bottom: 0.8em;
    // Large font and line-height makes the intro text easier to read —> more people read it (?).
    color: hsl(0, 0%, 6%);
    font-size: 14px;
    line-height: 1.65;

.esForumIntro_btns
  float: right;

.esForumIntro_edit,
.esForumIntro_close
  display: inline-block;
  padding: 2px 0 8px 12px;
  position: relative;
  left: -3px;
  color: hsl($uiHue, 77%, 42%);
  font-weight: bold;
  font-size: 14px;
  .icon-cancel:before
    opacity: 0.8;
  .esForumIntro_close_reopen
    font-weight: normal;
    .icon-info-circled
      text-shadow: 0 0 2px hsl($uiHue, 100%, 20%);
      color: hsl($uiHue, 89%, 95%);
      font-size: 15px;
      margin: 0;
      padding: 0;
      position: relative;
      line-height: 0;
      top: 1px;

.esForumIntro_close_reopen
  font-weight: normal;
  font-size: 13px;

.esForumIntro_edit
  padding-left: 4px;

.dw-hide-forum-intro .esForumIntro
  display: none;

.dw-forum > .dw-help
  margin-bottom: 7px;


// Action bar
//===========================

// Fix this long error prone list later.
.esF_BB_SortBtn,
.esForum_navLink,
.esForum_catsDrop,
.esForum_filterBtn,
.esF_BB_CreateBtn
