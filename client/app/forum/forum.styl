  text-align: right;

.esF_TsL_T_Row2_Users
  clearfix();
  padding-bottom: $row2PaddingBottom;
  display: inline-block;
  vertical-align: middle;
  opacity: 0.8; // otherwise avatars steal attention from topic title
  .esAvtr-tny
    margin-right: 4px;

.esF_TsL_T_Row2_Cat
  display: inline-block;
  margin: 0 4px 0 8px;
  vertical-align: middle;
  padding-bottom: $row2PaddingBottom;
  .esF_Ts_T_CName
    color: #222;

.esF_TsL_T_Row2_Cat_Expl
  color: hsl(0, 0%, 50%);
  margin-right: 1px;
  vertical-align: middle;


