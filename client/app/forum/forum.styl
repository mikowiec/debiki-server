.esForum_sortInfo
  margin: 4px 0 1em 4px;
  color: hsl(0, 0%, 32%);
  font-style: italic;
  font-size: 14px;

$tablePaddingLeftNarrow = 4px
$tablePaddingLeftWide = 8px
$tableFontSize = 13.4px;
$tableTopicTitleFontSize = 15.3px;
$tableTopicExcerptFontSize = 14px;
