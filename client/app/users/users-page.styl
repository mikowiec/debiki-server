.esMedAvtr // medium sized avatar
  position: relative;
  $maxWidth = 180px;
  min-width: 170px;
  max-width: $maxWidth;
  min-height: 170px; // if no photo uploaded
  &:hover
    .esMedAvtr_uplBtn
        visibility: visible;
  img
    max-width: $maxWidth;
    max-height: 200px;

.esMedAvtr_uplBtn  // upload button
  position: absolute;
  visibility: hidden;
  bottom: 10px;
  // Place in the middle:
  left: 50%;
  transform: translateX(-50%);


.esMedAvtr_uplBtn
  color: white;
  border-top: 1px solid white;

.esMedAvtr-missing  // no avatar uploaded, it's misssing
  .esMedAvtr_uplBtn
    visibility: visible;


