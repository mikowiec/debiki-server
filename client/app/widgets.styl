
.s_Expandable_Header
  padding: 7px 10px;
  width: 100%;
  background: hsl(0, 0%, 93%);
  border: none;
  font-weight: bold;
  text-align: left;

.s_Expandable .caret
  transform: scale(1.4, 1.5);
  margin-right: 7px;
  position: relative;
  top: -1px;
  color: hsl(0, 0%, 33%);

.s_Expandable-Closed .caret
  transform: scale(1.5, 1.3) rotate(-90deg); // change from  v  to  >

.s_Expandable_Body
  padding: 12px 8px;
  border: 2px solid hsl(0, 0%, 93%);
  border-top: none;

